{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": ["jasmine", "node"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "allowJs": true
  },
  "files": ["src/polyfills.ts"],
  "include": ["src/test.ts", "src/**/*.spec.ts", "src/**/*.d.ts"]
}
